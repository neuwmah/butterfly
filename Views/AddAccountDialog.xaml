<Window x:Class="Butterfly.Views.AddAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Dialog_AddAccount_Title}" 
        Height="380" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F3F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#0078D4" 
            BorderThickness="1" 
            CornerRadius="8"
            Background="#1E1E1E">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" 
                    Background="#0078D4" 
                    CornerRadius="8,8,0,0"
                    Padding="25,18"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Dialog_AddAccount_Title}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"
                               FontFamily="Segoe UI"/>
                    <TextBlock Text="{DynamicResource Dialog_AddAccount_Subtitle}" 
                               FontSize="12" 
                               Foreground="#E0E0E0"
                               Margin="0,4,0,0"
                               FontFamily="Segoe UI"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" 
                        Margin="30,25,30,20">
                
                <TextBlock Text="{DynamicResource Dialog_AddAccount_Username}" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           Foreground="#CCCCCC"
                           Margin="0,0,0,8"
                           FontFamily="Segoe UI"/>
                <TextBox x:Name="UsernameBox"
                         Style="{StaticResource InputTextBox}"
                         Height="40"
                         Margin="0,0,0,18"/>

                <TextBlock Text="{DynamicResource Dialog_AddAccount_Password}" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           Foreground="#CCCCCC"
                           Margin="0,0,0,8"
                           FontFamily="Segoe UI"/>
                <TextBox x:Name="PasswordBox"
                         Style="{StaticResource InputTextBox}"
                         Height="40"
                         Margin="0,0,0,18"/>

                <TextBlock Text="{DynamicResource Dialog_AddAccount_CharacterName}" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           Foreground="#CCCCCC"
                           Margin="0,0,0,8"
                           FontFamily="Segoe UI"/>
                <TextBox x:Name="CharacterBox"
                         Style="{StaticResource InputTextBox}"
                         Height="40"/>
            </StackPanel>

            <Border Grid.Row="2" 
                    Background="#252525" 
                    CornerRadius="0,0,8,8"
                    Padding="25,18">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    
                    <Button Content="{DynamicResource Dialog_AddAccount_Cancel}"
                            Background="#3A3A3A"
                            Style="{StaticResource DialogButton}"
                            Click="CancelButton_Click"
                            Width="110"
                            Height="38"
                            Margin="0,0,12,0"/>
                    
                    <Button Content="{DynamicResource Dialog_AddAccount_Add}"
                            Background="#0078D4"
                            Style="{StaticResource DialogButton}"
                            Click="OkButton_Click"
                            Width="140"
                            Height="38"/>
                </StackPanel>
            </Border>
            
        </Grid>
    </Border>

</Window>
