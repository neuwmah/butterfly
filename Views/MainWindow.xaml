                                                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                                KeyDown="EditableTextBox_KeyDown"
                                                Tag="Username"/>
                                    </Grid>
                                    
                                    <Grid Grid.Column="3" VerticalAlignment="Center" x:Name="PasswordGrid">
                                        
                                        <TextBlock x:Name="HiddenPassword"
                                                Text="" 
                                                FontSize="12" FontFamily="Segoe UI"
                                                Foreground="#FFFFFF"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                TextAlignment="Left"
                                                Margin="0"
                                                Padding="0">
                                            <TextBlock.Visibility>
                                                <MultiBinding Converter="{StaticResource InverseBoolConverter}" ConverterParameter="MultiVisibility">
                                                    <Binding Path="DataContext.IsPasswordVisible" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    <Binding Path="IsEditing"/>
                                                </MultiBinding>
                                            </TextBlock.Visibility>
                                        </TextBlock>
                                        
                                        <Grid x:Name="HoverPasswordGrid">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="IsHitTestVisible" Value="True"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsPasswordVisible, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                            <Setter Property="IsHitTestVisible" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            
                                            <TextBlock x:Name="MaskedPassword"
                                                    Text="{Binding Password, Converter={StaticResource PasswordMaskConverter}}" 
                                                    FontSize="12" FontFamily="Segoe UI"
                                                    Foreground="#FFFFFF"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    TextAlignment="Left"
                                                    Margin="0"
                                                    Padding="0">
                                                <TextBlock.Visibility>
                                                    <MultiBinding Converter="{StaticResource InverseBoolConverter}" ConverterParameter="MultiVisibilityAnd">
                                                        <Binding Path="IsEditing"/>
                                                        <Binding Path="DataContext.IsPasswordVisible" RelativeSource="{RelativeSource AncestorType=Window}" Converter="{StaticResource InverseBoolConverter}"/>
                                                    </MultiBinding>
                                                </TextBlock.Visibility>
                                            </TextBlock>

                                            <TextBlock x:Name="RealPassword"
                                                    Text="{Binding Password}" 
                                                    FontSize="12" FontFamily="Segoe UI"
                                                    Foreground="#FFFFFF"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    TextAlignment="Left"
                                                    Margin="0"
                                                    Padding="0"
                                                    Visibility="Collapsed"/>

                                            <Grid.Triggers>
                                                <EventTrigger RoutedEvent="Grid.MouseEnter">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MaskedPassword"
                                                                                        Storyboard.TargetProperty="Visibility">
                                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
                                                            </ObjectAnimationUsingKeyFrames>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RealPassword"
                                                                                        Storyboard.TargetProperty="Visibility">
                                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                                <EventTrigger RoutedEvent="Grid.MouseLeave">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MaskedPassword"
                                                                                        Storyboard.TargetProperty="Visibility">
                                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                                            </ObjectAnimationUsingKeyFrames>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RealPassword"
                                                                                        Storyboard.TargetProperty="Visibility">
                                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Grid.Triggers>
                                        </Grid>

                                        <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" 
                                                Style="{StaticResource EditableFieldStyle}"
                                                FontSize="12" FontFamily="Segoe UI"
                                                VerticalAlignment="Center"
                                                Foreground="#FFFFFF"
                                                CaretBrush="White"
                                                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                                KeyDown="EditableTextBox_KeyDown"
                                                Tag="Password"/>
                                    </Grid>
                                    
                                    <Grid Grid.Column="4" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Level}" 
                                                FontSize="12" FontFamily="Segoe UI"
                                                Foreground="#FFFFFF"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                TextAlignment="Left"
                                                Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                    </Grid>
                                    
                                    <Grid Grid.Column="5" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Experience}" 
                                                FontSize="12" FontFamily="Segoe UI"
                                                Foreground="#FFFFFF"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                TextAlignment="Left"
                                                Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                    </Grid>
                                    
                                    <Grid Grid.Column="6" VerticalAlignment="Center">
                                        <ToggleButton x:Name="BotToggleButton"
                                                    Width="28"
                                                    Height="28"
                                                    Margin="0,0,12,0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    VerticalAlignment="Center"
                                                    Padding="4"
                                                    IsChecked="{Binding IsBotActive, Mode=TwoWay}"
                                                    PreviewMouseLeftButtonDown="BotToggleButton_PreviewMouseLeftButtonDown"
                                                    Style="{x:Null}">
                                            <ToggleButton.Visibility>
                                                <MultiBinding Converter="{StaticResource BotVisibilityConverter}">
                                                    <Binding Path="DataContext.IsServerSelected" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    <Binding Path="Status"/>
                                                </MultiBinding>
                                            </ToggleButton.Visibility>
                                            <ToggleButton.Template>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border x:Name="RootBorder"
                                                            Width="28" 
                                                            Height="28"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Padding="4">
                                                        
                                                        <Viewbox Width="20" Height="20"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center">
                                                            <Canvas Width="24" Height="24">
                                                                <Path x:Name="OutlineBolt"
                                                                    Data="M13 2L3 14h8l-1 8 10-12h-8l1-8z"
                                                                    Stroke="#515151"
                                                                    StrokeThickness="1.5"
                                                                    Fill="Transparent"
                                                                    StrokeLineJoin="Round"/>
                                                                <Path x:Name="FilledBolt"
                                                                    Data="M13 2L3 14h8l-1 8 10-12h-8l1-8z"
                                                                    Fill="#AE81FF"
                                                                    Opacity="0"/>
                                                            </Canvas>
                                                        </Viewbox>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="OutlineBolt"
                                                                                    Storyboard.TargetProperty="Opacity"
                                                                                    To="0"
                                                                                    Duration="0:0:0.25"/>
                                                                        <DoubleAnimation Storyboard.TargetName="FilledBolt"
                                                                                    Storyboard.TargetProperty="Opacity"
                                                                                    To="1"
                                                                                    Duration="0:0:0.25"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.EnterActions>
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="OutlineBolt"
                                                                                    Storyboard.TargetProperty="Opacity"
                                                                                    To="1"
                                                                                    Duration="0:0:0.25"/>
                                                                        <DoubleAnimation Storyboard.TargetName="FilledBolt"
                                                                                    Storyboard.TargetProperty="Opacity"
                                                                                    To="0"
                                                                                    Duration="0:0:0.25"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.ExitActions>
                                                        </Trigger>
                                                        <MultiTrigger>
                                                            <MultiTrigger.Conditions>
                                                                <Condition Property="IsMouseOver" Value="True"/>
                                                                <Condition Property="IsChecked" Value="False"/>
                                                            </MultiTrigger.Conditions>
                                                            <MultiTrigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <ColorAnimation Storyboard.TargetName="OutlineBolt"
                                                                                    Storyboard.TargetProperty="Stroke.Color"
                                                                                    To="#CCCCCC"
                                                                                    Duration="0:0:0.15"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </MultiTrigger.EnterActions>
                                                            <MultiTrigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <ColorAnimation Storyboard.TargetName="OutlineBolt"
                                                                                    Storyboard.TargetProperty="Stroke.Color"
                                                                                    To="#515151"
                                                                                    Duration="0:0:0.15"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </MultiTrigger.ExitActions>
                                                        </MultiTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </ToggleButton.Template>
                                        </ToggleButton>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>


        <Border x:Name="ConsoleControlsBar"
                Grid.Row="2"
                Background="#000000"
                BorderBrush="#1A1A1A"
                BorderThickness="0,1,0,0"
                Height="40"
                Visibility="Visible">
            <Grid Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="PlayPauseButton"
                        Style="{StaticResource PlayPauseButton}"
                        FocusVisualStyle="{x:Null}"
                        Click="PlayPauseButton_Click"
                        Padding="0"
                        Margin="0"
                        ToolTip="{DynamicResource ToolTip_StartPause}">
                    <Viewbox Width="14" Height="14" x:Name="PlayPauseIcon">
                        
                        <Canvas Width="24" Height="24">
                            <Path x:Name="PlayIcon" 
                                  Data="M8,5.14V19.14L19,12.14L8,5.14Z" 
                                  Fill="#AE81FF"
                                  Opacity="1"/>
                            <Path x:Name="PauseIcon" 
                                  Data="M14,19H18V5H14M6,19H10V5H6V19Z" 
                                  Fill="#AE81FF"
                                  Opacity="0"/>
                        </Canvas>
                    </Viewbox>
                </Button>

                <Rectangle Grid.Column="1"
                           Width="1"
                           VerticalAlignment="Stretch"
                           Stroke="#1A1A1A"
                           Margin="0"/>

                <Button Grid.Column="2"
                        x:Name="RefreshButton"
                        Style="{StaticResource PlayPauseButton}"
                        FocusVisualStyle="{x:Null}"
                        Click="RefreshButton_Click"
                        Padding="0"
                        Margin="0"
                        ToolTip="{DynamicResource ToolTip_RefreshOnce}">
                    <Viewbox Width="14" Height="14">
                        <Canvas Width="24" Height="24">
                            <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" 
                                  Fill="#AE81FF"/>
                        </Canvas>
                    </Viewbox>
                </Button>

                <Rectangle Grid.Column="3"
                           Width="1"
                           VerticalAlignment="Stretch"
                           Stroke="#1A1A1A"
                           Margin="0"/>

                <Button Grid.Column="4"
                        x:Name="TerminalButton"
                        Style="{StaticResource PlayPauseButton}"
                        FocusVisualStyle="{x:Null}"
                        Click="TerminalButton_Click"
                        Padding="0"
                        Margin="0"
                        ToolTip="{DynamicResource ToolTip_OpenTerminal}">
                    <Viewbox Width="16" Height="16">
                        
                        <Canvas Width="24" Height="24">
                            <Path Data="M20 19H4V5H20M20 3H4C2.89 3 2 3.89 2 5V19C2 20.1 2.9 21 4 21H20C21.1 21 22 20.1 22 19V5C22 3.89 21.1 3 20 3M13 17H11V15H13M17 13H7V11H17V13Z" 
                                  Fill="#AE81FF"/>
                        </Canvas>
                    </Viewbox>
                </Button>

                <Rectangle Grid.Column="5"
                           Width="1"
                           VerticalAlignment="Stretch"
                           Stroke="#1A1A1A"
                           Margin="0"/>

                <TextBlock Grid.Column="6"
                           x:Name="txtLastLog"
                           VerticalAlignment="Center"
                           Foreground="#FFFFFF"
                           Opacity="1.0"
                           Margin="16,0,16,0"
                           TextTrimming="CharacterEllipsis"
                           FontFamily="Consolas"
                           FontSize="12"/>
            </Grid>
        </Border>

        <!-- Update Overlay -->
        <Grid x:Name="UpdateOverlay"
              Grid.RowSpan="3"
              Background="#FF000000"
              Visibility="Collapsed"
              IsHitTestVisible="True"
              ZIndex="1000">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <Image x:Name="UpdateOverlayIcon"
                       Width="64"
                       Height="64"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"/>
                
                <TextBlock Text="{DynamicResource Main_UpdatingButterfly}"
                          Foreground="#FFFFFF"
                          FontFamily="Segoe UI"
                          FontSize="18"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,16"/>
                
                <ProgressBar x:Name="UpdateProgressBar"
                            IsIndeterminate="True"
                            Width="300"
                            Height="1"
                            Margin="0,0,0,16"
                            Background="#1A1A1A"
                            Foreground="#AE81FF"
                            BorderThickness="0"/>
                
                <TextBlock x:Name="UpdateStatusText"
                          Text="{DynamicResource Main_PleaseWait}"
                          Foreground="#CCCCCC"
                          FontFamily="Segoe UI"
                          FontSize="14"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          MaxWidth="400"
                          Margin="0,0,0,0"/>
            </StackPanel>
        </Grid>
        
        <!-- Floating Action Button (Fixed Position) -->
        <Button x:Name="DisplayFAB"
                Grid.Row="0"
                Grid.RowSpan="10"
                Style="{StaticResource FloatingActionButton}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="40"
                Height="40"
                Margin="0,0,16,56"
                Click="DisplayFAB_Click"
                MouseEnter="DisplayFAB_MouseEnter"
                MouseLeave="DisplayFAB_MouseLeave"
                Panel.ZIndex="999"
                ToolTipService.InitialShowDelay="0"
                ToolTipService.ShowDuration="5000"
                ToolTipService.Placement="Left"
                ToolTipService.HorizontalOffset="-5"
                ToolTipService.VerticalOffset="6">
        </Button>
    </Grid>
</Window>
